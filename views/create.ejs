        <form action="/item" method="POST" name="createForm" id="createUpdateForm" onsubmit="return validateJSONAndGeoJSON('createRoute')">
          Username:<br />
          <input type="text" name="creator" onKeyup="checkform()"/><br>
          Name of route:<br />
          <input type="text" name="name" onKeyup="checkform()"/><br>
          Route in correct GeoJSON syntax:<br />
          <textarea id="createRoute" style="width:100%; height:300px" type="text" name="geoJson" onKeyup="checkform()"></textarea>
          Timestamp:<br />
          <input type="date" name="date" id="date" onchange="checkform(); checkTimestamp()"/>
          <input type="time" name="time" id="time" onKeyup="checkform(); checkTimestamp()"/><br />
          Type:<br />
          <input type="radio" name="type" id="plannedRadio" value="planned" checked> planned<br>
          <input type="radio" name="type" id="completedRadio" value="completed"> completed<br>
          <input type="hidden" name="madeBy" value = "user"/>
          <input type="hidden" name="what" value = "route"/>
          <input type="hidden" name="status" value = "new"/>
          <br/><br/>
          <input type="submit" value="Create" disabled="disabled" id="submitbutton"/>
          <div id="errorMsg">To create a route you need to fill in all blanks.</div>

